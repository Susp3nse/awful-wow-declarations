{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "types": [
      "",
      "@typescript-to-lua/language-extensions",
      "lua-types/5.1",
      "declarations/index.d.ts"
    ],
    "typeRoots": ["@types", "@wartoshika/lua-declarations"],
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "strict": true
  },
  "tstl": {
    "luaTarget": "5.1"
  },
  "include": ["declarations/**/*.d.ts"]
}
